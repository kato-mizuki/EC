<table>
  <thead>
    <tr><%= @items.image %></tr>
  </thead>
  <tbody>
    <tr>
      <th><%= @items.name %></th>
    </tr>
    <tr>
      <td><%= @items.introduction %></td>
    </tr>
    <tr>
      <td>
        ￥ <%= @items.with_tax_price.to_s(:dalimited) %>(税込)
      </td>
    </tr>
    <%= form_with model: @cart_item,url: public_cart_items_path do |f| %>
    <tr>
      <%= f.hidden_field :item_id, :value => @items.id %>
      <td><%= f.select :amount, *[1..10], include_blank: "選択して下さい" %></td>
      <td><%= f.submit "カートに入れる", class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>