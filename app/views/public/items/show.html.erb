<table>
  <thead>
    <tr><%= @items.image %></tr>
  </thead>
  <tbody>
    <tr>
      <th><%= @items.name %></th>
    </tr>
    <tr>
      <td><%= @items.introduction %></td>
    </tr>
    <tr>
      <td>
        ￥ <%= @items.with_tax_price.to_s(:dalimited) %>(税込)
      </td>
    </tr>
    <tr>
    <%= form_with model: @items,url: public_cart_items_path do |f| %>
      <td><%= f.select :amount, *[1..10], include_blank: "選択して下さい" %></td>
    <% end %>
      <td><%= link_to "カートに入れる", public_cart_items_path, class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>