<div class="container">
  <div class="row">
    <h3 class="bg-secondary p-0">会員情報編集</h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table table-borderless col-lg-8">
      <thead></thead>
      <tbody>
        <%= form_with model: @customer, url: public_customers_information_path, method: :get do |f| %>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_area :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存",class: "btn btn-success" %></td>

          <td><%= link_to "退会する", public_customers_withdraw_path, class: "btn btn-danger" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

  </div>
</div>
