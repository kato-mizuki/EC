<span class="bg-secondary">会員情報編集</span>
<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= current_customer.last_name %></td>
      <td><%= current_customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= current_customer.last_name_kana %></td>
      <td><%= current_customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= current_customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= current_customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= current_customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= current_customer.email %></td>
    </tr>
    <tr>
      <td><%= link_to "編集内容を保存",public_customers_information_path,class: "btn btn-success" %></td>
      <td><%= link_to "退会する", public_customers_withdraw_path, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
