<span class="bg-secondary">注文履歴一覧</span>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        <%= order.current_customer.postal_code %></br>
        <%= order.current_customer.address %></br>
        <%= order.current_customer.address_name %>
      </td>
      <td><%= order.item_name %></td>
      <td><%= order.total %></td><% end %>
      <td><%= link_to "表示する", public_order_path(current_customer.id), class: "btn btn-primary" %></td>
    </tr>
  </tbody>
</table>