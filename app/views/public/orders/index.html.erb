<span class="bg-secondary">注文履歴一覧</span>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.address_name %>
      </td><td>
      <% order.order_details.each do |order_detail| %>
       <%= order_detail.item.name %></br>
      <% end %>
      </td>
      <td><%= order.total_price %></td><% end %>
      <td><%= link_to "表示する", public_order_path(current_customer.id), class: "btn btn-primary" %></td>
    </tr>
  </tbody>
</table>