<span class="bg-secondary">ショッピングカート</span>
<%= link_to "カートを空にする", public_cart_items_path, class: "btn btn-danger" %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= cart_item.item.image %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
    <% @sum +=  cart_item.subtotal %>
    <% end %>
    <tr>
      <td><%= link_to "買い物を続ける", public_path, class: "btn btn-primary" %></td>
      <td></td>
      <td></td>
      <td>合計金額</td>
      <td></td>
    </tr>
  </tbody>
</table>