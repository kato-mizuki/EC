<span class="bg-secondary">会員一覧</span>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @customer.each do |customer| %>
  <tbody>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to customer.last_name, admin_customer_path(customer) %>
        <%= link_to customer.first_name, admin_customer_path(customer) %>
      </td>
      <td><%= customer.email %></td>
      <td></td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @customer %>